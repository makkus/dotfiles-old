- dotfiles:
    install:
      - vars:
          pkg_mgr: auto
        packages:
          - direnv
          - gawk
          - pypy
          - pypy-dev
          - python-dev
          - python3-dev
          - unrar
          - virtualenv
          - virtualenvwrapper
      - vars:
          pkg_mgr: nix
        packages:
          - di
          - emacs
          - fasd-unstable
          - fzf
          - git-crypt
          - htop
          - imagemagick
          - lnav
          - mu
          - pandoc
          - password-store
          - silver-searcher
          - ranger
          - ripgrep
      - vars:
         pkg_mgr: pip
         virtualenv: ~/.virtualenvs/global_virtualenv
        packages:
          - starred

