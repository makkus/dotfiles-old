[alias]
	co = checkout
	uncommit = reset --mixed HEAD~
	ammend = commit --amend
	ct = commit
	st = status
	br = branch
	branches = branch -a
	stashes = stash list
	unstage = reset -q HEAD --
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
	precommit = diff --cached --diff-algorithm=minimal -w
        fa = fetch --all
        far = fetch --all --recurse-submodules
        t = log --graph --pretty=oneline --abbrev-commit --decorate --color
        ta = log --graph --pretty=oneline --abbrev-commit --decorate --color --all

[core]
	safecrlf = true
	autocrlf = false

[push]
	default = simple
[merge]
	tool = meld
[status]
	showUntrackedFiles = all
[credential]
	helper = cache --timeout=7200
[github]
	user = makkus
[commit]
	gpgsign = true
