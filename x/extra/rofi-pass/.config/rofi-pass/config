_rofi () {
    rofi -z -i -width 800 -no-levenshtein-sort "$@"
}



# fields to be used
URL_field='url'
USERNAME_field='user'
AUTOTYPE_field='autotype'

# delay to be used for :delay keyword
delay=2

# rofi-pass needs to close itself before it can type passwords. Set delay here.
wait=0.2

## Programs to be used
# Editor
# EDITOR='emacsclient -s markus -c'
EDITOR='zile'

# Browser
BROWSER='firefox'

## Misc settings

default_do='autopass' # copyPass, typeUser, typePass, copyUser, copyUrl, viewEntry, typeMenu, actionMenu, copyMenu, openUrl
auto_enter='false'
notify='false'
passlength='20'

# seconds to wait before re-opening showEntry-menu
# after autotyping an entry. Set to "off" to disable
count=2

# color of the help messages
# leave empty for autodetection
help_color=""
help_header="true"

default_autotype='user :tab pass'
default_user=markus

# Clipboard settings
# Possible options: primary, clipboard, both
clip=both

# Custom Keybindings
autotype="Control+i"
type_user="Control+Shift+u"
type_pass="Control+Shift+p"
open_url="Control+Shift+l"
copy_name="Alt+l"
copy_url="Alt+u"
copy_pass="Alt+p"
show="Control+s"
copy_entry="Alt+e"
type_entry="Alt+Shift+t"
copy_menu="Control+c"
action_menu="Control+z"
type_menu="Control+t"
#help="Control+h"
switch="Control+x"
